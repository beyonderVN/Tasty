<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/tvIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/ivAddGredient"
        android:hint="Add gredient"
        android:textColor="@color/black"
        android:padding="4dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ivCancelIngredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etGredient"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/etGredient"
        android:src="@drawable/ic_cancel_fredient" />
</RelativeLayout>
